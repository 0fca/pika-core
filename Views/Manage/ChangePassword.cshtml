@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change password";
    ViewData.AddActivePage(ManageNavPages.ChangePassword);
}

<h4>@ViewData["Title"]</h4>
@await Html.PartialAsync("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col s12 m12 l12">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="input-field">
                <label>@Html.DisplayNameFor(m => m.OldPassword)</label>
                <input asp-for="OldPassword" class="validate login-input-color" />
                <span asp-validation-for="OldPassword" class="red-text"></span>
            </div>
            <div class="input-field">
                <label>@Html.DisplayNameFor(m => m.OldPassword)</label>
                <input asp-for="NewPassword" class="validate login-input-color" />
                <span asp-validation-for="NewPassword" class="red-text"></span>
            </div>
            <div class="input-field">
                <label>@Html.DisplayNameFor(m => m.OldPassword)</label>
                <input asp-for="ConfirmPassword" class="validate login-input-color" />
                <span asp-validation-for="ConfirmPassword" class="red-text"></span>
            </div>
            <button type="submit" class="btn">Update password</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
