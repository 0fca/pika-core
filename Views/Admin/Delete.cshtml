@model ApplicationUser
@{ 
    ViewData["Title"] = "Delete user "+Model.UserName;
}
<div class="d-flex align-items-center text-center align-content-center flex-wrap row">
        <h3>Delete user @Model.Email</h3>
        <form asp-controller="Admin" asp-action="DeleteConfirmation" asp-route-id="@Model.Id" method="post">
            <div class="form-group">
                <span>
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a href="/Admin/Index" class="btn btn-primary">Cancel</a>
                </span>
            </div>
        </form>
</div>