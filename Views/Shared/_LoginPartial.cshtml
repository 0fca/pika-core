@using Microsoft.AspNetCore.Identity
@using FMS2.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
    <ul class="nav navbar-nav navbar-right">
        <li><a class="navlink" asp-area="" asp-controller="File" asp-action="Index">Browse</a></li>
        <li><a class="navlink" asp-area="" asp-controller="Home" asp-action="Projects">Projects</a></li>
        <li><a class="navlink" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
        <li><a class="navlink" asp-area="" asp-controller="Home" asp-action="About">About</a></li>
        @if (SignInManager.IsSignedIn(User))
        {
            <li>
                <a asp-area="" class="navlink" asp-controller="Manage" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>

        }
        else
        {
            <li><a asp-area="" class="navlink" asp-controller="Account" asp-action="Register">Register</a></li>
            <li><a asp-area="" class="navlink" asp-controller="Account" asp-action="Login">Log in</a></li>

        }
    </ul>
</form>