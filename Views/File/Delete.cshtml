@{
    ViewData["Title"] = "Delete - Admin";
    object type = ViewData["type"];
    object name = ViewData["name1"];
}


<h2>@ViewData["Title"]</h2>
    <form asp-action="DeleteConfirmation" asp-route-path="@ViewData["path"]" method="post" class="form-horizontal">
        <div class="row">
            <div class="col-md-4">
                 <p class="text">
                    You are going to delete the @type of name: @name. Are you sure?
                </p>    
                <button type="submit" class="btn btn-default">Delete</button>
            </div>
        </div>
    </form>
