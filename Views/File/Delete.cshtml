@model FMS2.Models.FileResultModel
@using Microsoft.Extensions.FileProviders
@{
    ViewData["Title"] = "Delete - Admin";
}
<h2>@ViewData["Title"]</h2>
<div class="d-flex align-items-center text-center align-content-center flex-wrap row row-margins">
    <p class="text">Choose files or folders to be deleted:</p>
    <form asp-controller="File" asp-action="DeleteConfirmation" method="post" class="form-horizontal">
        @{
            var items = new List<SelectListItem>();
            foreach (IFileInfo i in Model.Contents)
            {
                items.Add(new SelectListItem { Text = i.Name, Value = i.PhysicalPath });
            }
        }

        <select class="custom-select" asp-for="Contents" asp-items="@items" multiple></select>

        <span>
            <button type="submit" class="btn btn-danger">Delete</button>
            <button type="submit" class="btn btn-primary" formaction="AdminFileView">Cancel</button>
        </span>
    </form>
</div>
