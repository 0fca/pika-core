@using Pika.Domain.Identity.Data
@inject IViewLocalizer Localizer  
@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<ul class="tabs tabs-fixed-width nav-menu-colors">
    <li class="col s4 tab"><a target="_self" class="@ManageNavPages.IndexNavClass(ViewContext) white-text" asp-action="Index">@Localizer["Profile"]</a></li>
    <li class="col s4 tab"><a target="_self" class="@ManageNavPages.ChangePasswordNavClass(ViewContext) white-text" asp-action="ChangePassword">@Localizer["Password"]</a></li>
    @if (hasExternalLogins)
    {
        <li class="col s4 tab"><a target="_self" class="@ManageNavPages.ExternalLoginsNavClass(ViewContext) white-text" asp-action="ExternalLogins">@Localizer["External logins"]</a></li>
    }
    <li class="col s4 tab"><a target="_self" class="@ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext) white-text" asp-action="TwoFactorAuthentication">@Localizer["Two-factor authentication"]</a></li>
</ul>

