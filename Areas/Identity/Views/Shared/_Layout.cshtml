@{
    Layout = "/Views/Shared/_Layout.cshtml";
    var returnUrl = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}";
}


@section LocaleSwitch
{
    @await Html.PartialAsync("_Partials/_LocaleSwitch")
    
}

@section meta{
    <meta property="og:description" content="Welcome to Pika Core Identity Area!" />
    <meta property="og:image" content="https://core.lukas-bownik.net/images/pika-logos/pikacloud_brand.png" />
    <meta name="theme-color" content="#009688" />
}

@RenderBody()
@await RenderSectionAsync("Scripts", required: false)
@section Scripts
{
    <script>
     $(document).ready(() => {
           $('select[name="culture"]').change((e) => {
                const locale = $(e.target).select().val();
                window.location = `@Url.Link("SetLanguage", 
                                       new { culture = "locale", returnUrl = returnUrl})`
                                       .replace('locale', locale).replace(/&amp;/g, "&");
            })}
     );
    </script> 
}

    
