@model PikaCore.Areas.Identity.Models.AccountViewModels.RegisterViewModel
@inject IViewLocalizer Localizer  

@{
    ViewData["Title"] = Localizer["Register a PikaCloud Account"];
}

<div class="container">
<div class="col s12 m12 offset-2">
    <div class="card indigo">
        <div class="card-content grey-text text-lighten-4 center">
            <span class="card-title">@ViewData["Title"]</span>
            <section>
                <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                    <div class="row">
                        @if (!ViewData.ModelState.IsValid)
                        {
                            @Html.ValidationSummary(true,"", new {@class = "card-panel red white-text"})
                        }
                        <div class="col s12 m12 l12">
                            <div class="input-field">
                                <label class="left">@Html.DisplayNameFor(m => m.Username)</label>
                                <input asp-for="Username" class="validate grey-text text-lighten-4"/>
                                <span asp-validation-for="Username" class="red-text"></span>
                                </div>
                            <div class="input-field">
                                <label class="left">@Html.DisplayNameFor(m => m.Email)</label>
                                <input asp-for="Email" class="validate grey-text text-lighten-4"/>
                                <span asp-validation-for="Email" class="red-text"></span>
                            </div>
                            <div class="input-field">
                                <label class="left">@Html.DisplayNameFor(m => m.Password)</label>
                                <input asp-for="Password" class="validate grey-text text-lighten-4"/>
                                <span asp-validation-for="Password" class="red-text"></span>
                            </div>
                            <div class="input-field">
                                <label class="left">@Html.DisplayNameFor(m => m.ConfirmPassword)</label>
                                <input asp-for="ConfirmPassword" class="validate grey-text text-lighten-4"/>
                                <span asp-validation-for="ConfirmPassword" class="red-text"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12 m12 l12">
                            <button type="submit" class="btn btn-default center">@Localizer["Sign up"]</button>
                        </div>
                    </div>
                    <div class="card-action">
                        <a class="grey-text text-lighten-4 left small-text" asp-action="Login">@Localizer["Have an account? Sign in!"]</a>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
