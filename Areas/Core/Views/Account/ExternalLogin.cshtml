@model ExternalLoginViewModel
@inject IViewLocalizer Localizer  
@{
    ViewData["Title"] = Localizer["Register"];
}
<div class="row row-margins">
    <div class="card indigo white-text center">
        <form asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
        <div class="card-content">
            <span class="card-title white-text">@ViewData["Title"] via @ViewData["LoginProvider"]</span>
            @string.Format(Localizer["You've successfully authenticated with <strong>{0}</strong>. " +
                                     "Please enter an email address for this site below and click the " +
                                     "Register button to finish logging in."].Value, ViewData["LoginProvider"])
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="red-text"></div>
                <div class="input-field">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="validate grey-text text-lighten-4"/>
                    <span asp-validation-for="Email" class="red-text"></span>
                </div>
                <div class="input-field">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="validate grey-text text-lighten-4"/>
                    <span asp-validation-for="Username" class="red-text"></span>
                </div>
            </div>
        </div>
        <div class="card-action">
            <button type="submit" class="btn btn-default">@Localizer["Register"]</button>
        </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
