@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="container">
<div class="card indigo white-text">
    <div class="card-content">
        <span class="card-title white-text">@ViewData["Title"]</span>
        <form method="post">
            @Html.ValidationSummary(true,"", new {@class = "card-panel red white-text"})
            <input asp-for="Code" type="hidden" />
            <div class="input-field">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="validate login-input-color" />
                <span asp-validation-for="Email" class="red-text"></span>
            </div>
            <div class="input-field">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="validate login-input-color" />
                <span asp-validation-for="Password" class="red-text"></span>
            </div>
            <div class="input-field">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="validate login-input-color" />
                <span asp-validation-for="ConfirmPassword" class="red-text"></span>
            </div>
            <button type="submit" class="btn btn-default">Reset</button>
        </form>
    </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
