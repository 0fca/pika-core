@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset password";
}

<h2>@ViewData["Title"]</h2>
<h4>Reset your password.</h4>
<hr />
<div class="d-flex align-items-center text-center align-content-center row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="red-text"></div>
            <input asp-for="Code" type="hidden" />
            <div class="input-field">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="validate grey-text text-lighten-4" />
                <span asp-validation-for="Email" class="red-text"></span>
            </div>
            <div class="input-field">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="validate grey-text text-lighten-4" />
                <span asp-validation-for="Password" class="red-text"></span>
            </div>
            <div class="input-field">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="validate grey-text text-lighten-4" />
                <span asp-validation-for="ConfirmPassword" class="red-text"></span>
            </div>
            <button type="submit" class="btn btn-default">Reset</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
