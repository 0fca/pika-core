@model ResetPasswordViewModel
@inject IViewLocalizer Localizer  
@{
    ViewData["Title"] = Localizer["Reset password"];
}

<div class="container">
<div class="col s12 m12 offset-2">
    <div class="card indigo">
        <div class="card-content grey-text text-lighten-4 center">
            <span class="card-title">@ViewData["Title"]</span>
            <section>
                <form method="post">
                    <div asp-validation-summary="All" class="red-text"></div>
                    <input asp-for="Code" type="hidden" />
                    <div class="input-field">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="validate grey-text text-lighten-4" />
                        <span asp-validation-for="Email" class="red-text"></span>
                    </div>
                    <div class="input-field">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="validate grey-text text-lighten-4" />
                        <span asp-validation-for="Password" class="red-text"></span>
                    </div>
                    <div class="input-field">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" class="validate grey-text text-lighten-4" />
                        <span asp-validation-for="ConfirmPassword" class="red-text"></span>
                    </div>
                    <button type="submit" class="btn btn-default">@Localizer["Reset"]</button>
                </form>
            </section>
        </div>
    </div>
</div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
