@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<div class="right">
    <ul class="right hide-on-med-and-down">
        <li>
            <a class="navlink left" asp-area="Core" asp-controller="Storage" asp-action="Index" title="Pika Browser">Pika Browser</a>
        </li>
        <li>
            <a id="app-drop-link" class='dropdown-trigger btn btn-flat' href='#' data-target='app-dropdown'>
                <i class="large material-icons">apps</i>
            </a>
        </li>
        @if (SignInManager.IsSignedIn(User))
        {
            <li>
                <a asp-area="Core" class="navlink" asp-controller="Manage" asp-action="Index" title="Manage">
                    <i class="material-icons">
                        account_box
                    </i>
                </a>
            </li>
            <li>
                <button type="submit" class="waves-effect waves-teal btn-flat">Log out</button>
            </li>

        }
        else
        {
            <li><a asp-area="Core" class="navlink" asp-controller="Account" asp-action="Register">Register</a></li>
            <li><a asp-area="Core" class="navlink" asp-controller="Account" asp-action="Login">Log in</a></li>
        }
    </ul>
</div>
<div id="app-dropdown" class="card dropdown-content hide-on-small-and-down appdropdown right" tabindex="0">
    <div class="card-content center">
        <span class="card-title teal-text">Pika Cloud Apps</span>
        <div class="col m12 l12">
            <a class="navlink app-menu-item" href="https://player.lukas-bownik.net/" title="Pika Player">
                <span class="material-icons prefix">
                    play_arrow
                </span>
                Pika Player
            </a>
        </div>
        @if (User.IsInRole("Admin"))
        {
            <div class="col m12 l12">
                <a asp-area="Core" asp-controller="Admin" asp-action="Index" class="navlink app-menu-item" title="Pika Cloud Admin">
                    <span class="material-icons prefix">
                        supervisor_account
                    </span>
                    Pika Cloud Admin
                </a>
            </div>
        }
        </div>
</div>
<script>
 function translateAppDropdown() {
         const dropdownLink = document.getElementById("app-dropdown-link");
         
 }
    
 window.onresize = translateAppDropdown();
</script>
