@inject IViewLocalizer Localizer  

@{ 
    Layout = "/Areas/Core/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="col s12 m12 offset-2">
        <div class="card indigo darken-1 center white-text">
            <h3>@Localizer["Manage your account"]</h3>
            <div class="card-content white-text">
                <header>
                    <div class="col m3 l3">
                        @await Html.PartialAsync("_ManageNav")
                        </div>
                </header>
                @RenderBody()
            </div>
        </div>
        </div>
</div>

@section Scripts {
    @await RenderSectionAsync("Scripts", required: false)
}
        
