@model DeleteResourcesViewModel

@{
    ViewData["Title"] = "Delete";
}


<div class="row">
    <div class="card indigo center">
        <div class="card-content white-text">
            <form asp-area="Core" asp-controller="Storage" asp-action="Delete" method="post">
            <span class="card-title">@ViewData["Title"]</span>
            <div class="card-content">
                <p>Choose files or folders to be deleted:</p>
                <div class="input-field">
                    @Html.DropDownListFor(m => m.ToBeDeletedItems, Model.ResourceList, "Choose resources to be deleted.")
                </div>
            </div>
            <div class="card-action">
                <button type="submit" class="btn btn-danger" asp-controller="Storage" asp-action="DeleteConfirmation">Delete</button>
                <a asp-controller="Storage" asp-action="Browse" asp-route-path="@Model.ReturnPath" class="btn btn-primary">Cancel</a>
            </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const elems = document.querySelectorAll('select');
        const instances = M.FormSelect.init(elems);
    });
</script>
