@model DeleteResourcesViewModel

@{
    ViewData["Title"] = "Delete";
}
<h2>@ViewData["Title"]</h2>
<div class="d-flex align-items-center text-center align-content-center flex-wrap row row-margins">
    <p class="text">Choose files or folders to be deleted:</p>
    <div class="input-field col s12">
        <form asp-area="Core" asp-controller="Storage" asp-action="Delete" method="post" class="form-horizontal">

            @Html.DropDownListFor(m => m.ToBeDeletedItems, Model.ResourceList, "Choose resources to be deleted.")
            
            <span>
                <input type="submit" value="Delete" class="btn btn-primary" asp-action="DeleteConfirmation" />
                <button type="submit" class="btn btn-primary" formaction="Browse">Cancel</button>
            </span>
        </form>
    </div>
    </div>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const elems = document.querySelectorAll('select');
        const instances = M.FormSelect.init(elems);
    });
</script>
