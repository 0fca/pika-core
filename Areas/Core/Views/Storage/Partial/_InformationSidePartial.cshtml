@inject IViewLocalizer Localizer
<div id="info-slide" class="information-side-pane" style="display: none;">
    <div class="row">
        <div class="col s10 m10 l10">
            <h5>@Localizer["Informacje o zasobie"]</h5>
        </div>
        <div class="col s1 m1 l1">
            <button class="btn btn-flat" id="close_button">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <div id="loader">
        @await Html.PartialAsync("_Loader.cshtml")
    </div>
    <div class="container-fluid left" id="resource_information_content">
    </div>
</div>