@inject IViewLocalizer Localizer  
@{
    ViewData["Title"] = "Home Page";
    var msg = TempData["returnMessage"];
}
<div class="row">
    <div class="main-page-content col s12 m12 l12">
        <h1 class="center">@Localizer["MainHeaderWelcomeText"] <strong class="havelock-text">Pika Core</strong>!</h1>
        <p class="flow-text center">
            @Localizer["MainHeaderText"]. @Localizer["MainHeaderYou"]
            <a class="amber-text text-darken-4" asp-area="Core" asp-controller="Storage" asp-action="Browse">
               @Localizer["MainHeaderBrowserLinkText"] 
            </a> @Localizer["MainHeaderOr"] <a class="amber-text text-darken-4" asp-page="/Home/About">@Localizer["MainHeaderAboutLinkText"]</a>.
        </p>
    </div>
</div>

@await Html.PartialAsync("Partial/_StatusMessage.cshtml", msg)


